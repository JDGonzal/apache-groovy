{
    "extends": "recommended",
    "rules": {
        "CompileStatic": {
            "enabled": false
        },
        "ConstantIfExpression": {
            "enabled": false
        },
        "DuplicateListLiteral": {
            "enabled": false
        },
        "DuplicateNumberLiteral": {
            "enabled": false
        },
        "DuplicateStringLiteral": {
            "enabled": false
        },
        "IfStatementBraces": {
            "enabled": false
        },
        "ImplicitClosureParameter": {
            "enabled": false
        },
        "Indentation": {
            "spacesPerIndentLevel": 2
        },
        "Instanceof": {
            "enabled": false
        },
        "MethodReturnTypeRequired": {
            "enabled": false
        },
        "NoDef": {
            "enabled": false
        },
        "VariableTypeRequired": {
            "enabled": false
        }
    }
}